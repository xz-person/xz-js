{
    "include": ["build.config.ts", "src", "__tests__"],
    "compilerOptions": {
        "outDir": "dist",
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "strict": true,
        "skipLibCheck": true,
        "declaration": false,
        "sourceMap": false,
        "noUnusedLocals": true,
        "esModuleInterop": true
    }
}
